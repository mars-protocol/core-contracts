{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "declaration": "true",
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "generated/**/*.ts",
    "config.ts",
    "msgs.ts",
    "storageItems.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

